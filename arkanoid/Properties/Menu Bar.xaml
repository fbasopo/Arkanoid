<Window x:Class="arkanoid.Properties.Menu_Bar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arkanoid.Properties"
        mc:Ignorable="d"
        Title="Menu_Bar" Height="530" Width="825" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Welcome2.jpg"/>
        </Grid.Background>
        <Button x:Name="Play_Button" Content="Play" HorizontalAlignment="Left" Margin="314,132,0,0" VerticalAlignment="Top" Width="206" Height="55" Click="Play_Button_Click"/>
        <Button x:Name="Sound_Button" Content="Sound On" HorizontalAlignment="Left" Margin="314,208,0,0" VerticalAlignment="Top" Width="206" Height="55" Click="Sound_Button_Click"/>
        <Button x:Name="exit_btn" Content="Exit" HorizontalAlignment="Left" Margin="314,282,0,0" VerticalAlignment="Top" Width="206" Height="57" FontFamily="Segoe UI Black" FontSize="36"/>

    </Grid>
</Window>
