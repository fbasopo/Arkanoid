<Window x:Class="arkanoid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arkanoid"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas x:Name="canvas" Margin="10,10,10,10" Background="#FF4B6DCB">
            <Image x:Name="ball" Height="25" Source="ball.png" Stretch="Fill" Width="25" Canvas.Top="46" Canvas.Left="218" RenderTransformOrigin="0.8,1.6"/>
            <Image x:Name="paddle" Height="25" Source="paddle.png" Stretch="Fill" Width="100" Canvas.Top="237" MouseDown="paddle_MouseDown" MouseMove="paddle_MouseMove" Canvas.Left="189"/>
            <Image x:Name="Over" Height="299" Width="497"/>
        </Canvas>

    </Grid>
</Window>
